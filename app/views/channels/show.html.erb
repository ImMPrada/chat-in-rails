<div id="workspace_channel_sidebar" class="w-1/5 h-full grid grid-rows-[auto,1fr,75px]">
  <%= render(
    partial: 'partials/workspace_channel/members_list',
    locals: {
      workspace_channel: @workspace_channel,
      workspace: @workspace,
      user: current_user,
      channel_members: @channel_members
    }
  ) %>
</div>

<div class="w-4/5 h-full grid grid-rows-[auto,auto,1fr]">
  <div class="flex
              justify-start
              gap-4
              py-4
              pr-5
              pl-8
              with-shadow
              w-full
              row-start-1"
  >
    <h2 class="text-white text-noto-18-700">
      <%= @workspace_channel.name.upcase %>
    </h2>
  </div>

  <div class="flex
              flex-col
              gap-9
              w-full
              row-start-2
              bg-black-soft
              overflow-y-auto
              py-4
              px-16">
    <% @messages.each do |message| %>
      <div class="w-full flex gap-7">
        <img
          src="<%= message.author.avatar_url %>"
          alt="<%= message.author.username %>"
          class="block w-10 h-10 rounded"
        >
        <div class="flex flex-col gap-2">
          <div class="flex items-center gap-4">
            <span class="text-noto-18-700 text-grey-soft">
              <%= message.author.username %>
            </span>
            <span class="text-noto-14-500 text-grey-soft">
              <%= message.created_at %>
            </span>
          </div>
          <p class="block text-noto-18-500 text-white">
            <%= message.content %>
          </p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="w-full row-start-3 bg-green">
    <%= render(
      partial: 'partials/workspace_channel/new_message',
      locals: {
        workspace_channel: @workspace_channel,
        workspace: @workspace
      }
    ) %>
  </div>
</div>
