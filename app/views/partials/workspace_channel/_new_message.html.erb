<%= form_with(
  model: Message.new,
  url: workspace_channel_messages_path(workspace, workspace_channel),
  class: "h-full w-full py-4 px-16",
  data: { turbo: false }
) do |form| %>

  <label
    class="flex justify-between items-center block w-full h-full p-1.5"
  >
    <%= form.text_area(
      :content,
      placeholder: "Type your message here",
      class: "flex-grow h-full resize-none text-noto-18-500"
    ) %>

    <%= form.submit(
      ">",
      class: "block w-10 h-10 btn rounded"
    ) %>
  </label>

<% end %>