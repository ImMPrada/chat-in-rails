<div id=<%= dom_id(message) %> class="w-full flex gap-7 px-8">
  <img
    src="<%= message.author.avatar_url %>"
    alt="<%= message.author.username %>"
    class="block w-10 h-10 rounded"
  >
  <div class="flex flex-col gap-2">
    <div class="flex items-center gap-4">
      <span class="text-noto-18-700 text-grey-soft">
        <%= message.author.username %>
      </span>
      <span class="hidden sm:inline-block text-noto-14-500 text-grey-soft">
        <%= friendly_date(message.created_at) %>
      </span>
    </div>
    <p class="block text-noto-18-500 text-white">
      <%= message.content %>
    </p>
  </div>
</div>
