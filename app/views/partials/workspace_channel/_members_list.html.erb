<%# locals: {
  workspace: @workspace,
  user: current_user,
  channel_members: @channel_members
} %>

<div class="flex
            flex-col
            with-shadow
            w-full
            bg-black"
>
  <div class="flex
              justify-start
              gap-4
              py-4
              pr-5
              pl-8
              with-shadow
              w-full
              h-[60px]"
  >
    <a
      class="block w-6 h-6 text-white text-center"
      href=<%= workspace_channels_path(workspace) %>
    >
      <
    </a>
    <h2 class="text-white text-noto-18-700">All channels</h2>
  </div>

  <h3 class="block pr-5 pl-8 mt-6 text-white text-noto-18-700">
    <%= workspace_channel.name.upcase %>
  </h3>

  <p class="block
            pr-5
            pl-8
            mt-4
            text-white
            text-noto-18-400
            break-word
            overflow-y-auto">
    <%= workspace_channel.description %>
  </p>

  <div class="w-full
              flex
              justify-between
              items-center
              gap-2
              pr-5
              pl-8
              mt-6
              mb-6"
  >
    <h3 class="text-white text-noto-18-700">
      MEMBERS
    </h3>
    <% if policy(workspace).add_member?(workspace_channel) %>
      <a class="block
                bg-black
                h-6
                w-6
                fill-white
                hover:cursor-pointer"
        href=<%= new_workspace_channel_member_path(workspace, workspace_channel) %>
        data-turbo-frame="modal"
        data-turbo-frame-loader="eager"
      >
        <%= render(Primer::Beta::Octicon.new(:plus, size: :medium)) %>
      </a>
    <% end %>
  </div>
</div>

<div class="w-full
            flex
            flex-col
            gap-5
            pb-6
            pr-5
            pl-8
            bg-black
            overflow-y-auto"
  id=<%= "#{dom_id(workspace_channel)}_members_list" %>
>
  <% channel_members.each do |member| %>
    <%= render(
      partial: 'partials/workspace_channel/member_card',
      locals: {
        workspace:,
        member:,
        user:,
        channel: workspace_channel,
      }
    ) %>
  <% end %>
</div>

<div class="w-full flex justify-between py-4 pr-5 pl-8 with-shadow bg-black-dark h-full">
  <%= render(
    partial: 'partials/workspace_channel/current_user_bar',
    locals: {
      user:,
    }
  ) %>
</div>
