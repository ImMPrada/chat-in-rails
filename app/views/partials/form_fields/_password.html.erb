<div class="field font-sans">
  <div class="field-header min-w-full">
    <%= form.label model_field, class: "text-white" %>
    <span class="text-red">
      <%= resource.errors.messages[model_field].first %>
    </span>
  </div>
  <% if @minimum_password_length %>
    <em class="text-white text-sm">(<%= @minimum_password_length %> characters minimum)</em>
  <% end %>
  <%= form.password_field(
    model_field,
    placeholder: placeholder || '******',
    class: "field-input #{ resource.errors.messages[model_field].first ? 'border-red' : ''}"
  ) %>
</div>
