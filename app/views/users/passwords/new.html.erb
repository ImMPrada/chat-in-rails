<div class="mx-auto self-center w-full sm:w-1/4">
  <h2 class="block text-white mb-12 text-center text-l">FORGOT YOUR PASSWORD?</h2>

  <%=
    form_with(
      model: @user,
      as: resource_name,
      url: password_path(resource_name),
      data: { "turbo-method": "post" },
      class: "flex flex-col gap-4"
    ) do |form| 
  %>

      <%= render partial: 'partials/form_fields/email', locals: {
        form:,
        model_field: :email,
        resource:,
        placeholder: nil
      } %>

      <div class="flex flex-col gap-1 mt-6">
        <%= form.submit "Send me reset password instructions", class: "block btn rounded-t-lg" %>
        <span class="block text-center text-white text-sm"> or </span>
        <%= link_to(
          "Sign up",
          new_user_registration_path,
          turbo: false,
          class: "block btn w-auto bg-grey-soft mb-1 hover:bg-blue"
        ) %>
        <%= link_to(
          "Sign in",
          new_user_session_path,
          turbo: false,
          class: "block btn w-auto bg-grey-soft rounded-b-lg hover:bg-blue"
        ) %>
      </div>
  <% end %>
</div>
