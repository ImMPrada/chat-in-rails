<%=  turbo_frame_tag("tool_sidebar") do %>
  <div class="border-l-4 md:w-[400px] xl:w-[600px] h-full grid grid-rows-[70px,1fr,auto]">
    <div class="flex
                justify-start
                bg-black-soft
                gap-4
                py-4
                pr-5
                pl-8
                mb-5
                with-shadow
                w-full
                row-start-1"
    >
      <h2 class="text-white text-noto-18-700">
        <%= current_user.username.upcase %>  -  <%= @receiver.username.upcase %>
      </h2>
    </div>

    <div class="flex
                flex-col
                gap-9
                w-full
                row-start-2
                bg-black-soft
                overflow-y-auto
                pt-14
                pb-20
                px-16"
      id=<%= "#{dom_id(@receiver)}_messages" %>
    >

      <%= render(
        partial: 'partials/workspace_channel/messages_list',
        locals: {
          messages: @messages
        }
      ) %>
    </div>

    <div id=<%= "#{dom_id(@receiver)}_message_box"%>
      class="w-full
             row-start-3
             bg-black-soft"
    >
      <%= render(
        partial: 'partials/workspace_channel/new_message',
        locals: {
          url: workspace_user_messages_path(@workspace, @receiver)
        }
      ) %>
    </div>
  </div>
<% end %>
