<div class="container
            bg-grey-dark
            min-h-screen
            min-w-full
            flex
            flex-col
            justify-center
            items-center"
>
  <div class="flex
             flex-col
             justify-between
             items-center
             w-full
             md:w-[600px]
             p-4
             gap-4
             md:p-8
             bg-black
             rounded-3xl"
  >
    <div class="flex flex-col">
      <p class="block text-white text-noto-18-400 px-6">
        You are being invited to:
      </p>
      <span class="block text-white text-noto-18-700 px-6">
        <%= @invitation.workspace.name %>
      </span>
    </div>

    <div class="flex w-full justify-between">
      <%= link_to(
        "Accept",
        invitation_path(token: @invitation.token),
        data:{ 'turbo-method': :patch },
        class:" btn text-white text-noto-14-500"
      ) %>
      <%= link_to(
        "Decline",
        invitation_decline_path(@invitation),
        data:{ 'turbo-method': :post },
        class:"btn text-white text-noto-14-500"
      ) %>
    </div>
  </div>
</div>
